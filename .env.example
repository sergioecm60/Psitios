# Configuración de la base de datos
DB_HOST=localhost
DB_NAME=secure_panel_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Clave de encriptación para datos sensibles (contraseñas de sitios).
# ¡IMPORTANTE! Debe ser una cadena de texto aleatoria de exactamente 32 caracteres (32 bytes).
# NO USES LA CLAVE DE EJEMPLO, GENERA UNA PROPIA Y ÚNICA.
# Ejemplo: ENCRYPTION_KEY=mYv3ryStr0ngAndS3cureR4nd0mKey!
ENCRYPTION_KEY=

# --- Configuración de Single Sign-On (SSO) ---
# Clave secreta compartida entre Psitios y pvytGestiones. Debe ser idéntica en ambos.
SSO_SECRET_KEY=

# URLs base de las aplicaciones. Ajustar puertos si es necesario.
PVYTGESTIONES_BASE_URL=http://localhost:5050/pvytGestiones
PSITIOS_BASE_URL=http://localhost:55063/Psitios
